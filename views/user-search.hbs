
  <!--  product seeing and main body-->

    <div class="productCategory">
    {{!-- <a href="/search?">All</a> --}}
    <a href="/search?search=MacBook">Mac</a>
    <a href="/search?search=iPad">iPad</a>
    <a href="/search?search=iPhone">iPhone</a>
    <a href="/search?search=Apple+watch">Watches</a>
    <a href="/search?search=AirPods">AirPods</a>
    </div>
  <!-- product seeing main body -->
  <div class="sortDiv">
        <span class=" sortby ml-5">SORT BY</span>
        <div class="listsort">
          <a class=" item ml-4" href="/search?search={{search}}&sort=productPrice">price--low to high</a>
          <a class=" item ml-4" href="/search?search={{search}}&sort=productPrice,desc">price--high to low</a>
          <a class=" item ml-4" href="">newest</a>
        </div>
      </div>
    </div>
  <div class="productPageMain m-4">
    <div class="container-fluid">
      <div class="row categoryCard">
        {{#if result}}
        {{#each result.resultProducts}}
        <div class="ml-3 mt-2 mb-5">
          <div class="card categorySingleCard" style="width: 18rem;">
            <div class="categoryImageDiv" onclick="location.href='/view-product/{{this._id}}';"> 
            <img src="{{this.productFirstImage}}" class="categoryImage"></div>
            <div class="card-body">
              <h5 class="card-title">{{this.productName}}</h5>
              <p class="card-text">â‚¹ {{this.productPrice}}</p>
              <p style="color: green; font-weight: 500;">{{this.productOffer}} % offer</p>
              <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">ADD to Cart</a>
            </div>
          </div>
        </div>
        {{/each}}
         <input hidden id="pageNo" value="{{result.pageCount}}"></input>
          <input hidden id="sortId" value="{{sort}}"></input>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="pagination mb-5">
    <ul class="pagination-list">
      <!-- Pagination links will be dynamically added here -->
    </ul>
  </div>


  