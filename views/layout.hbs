    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>
  {{!-- user comman header --}}
  <div class="loader ">
    <img src="/images/Loading_icon.gif" alt="loading....">
  </div>
  <div class="top_navbar">
    <div class="header-nav">
      <div class="logo">
        <a href="/"><img src="/images/user-navbar-logo.jpg" alt=""></a>
      </div>
      <div class="search">
        <form action="/search" method="get">
          <input class="searchinput" type="text" name="search" placeholder="search Here">
          <button class="searchButton" type="submit" aria-label="search"><i
              class="fa fa-search searchlogo"></i></button>
        </form>
      </div>

      {{#if loggedIn}}
      <div class="icons-header">
        {{!-- <a href="#" class="fa fa-heart heartlogo icon_header_margin"></a> --}}
        <a href="/cart" class="fa fa-shopping-cart icon_header_margin"><span class="badge badge-success"
            style="font-size: 10px;">{{cartCount}}</span></a>
        <div class="dropdown ">
          <button class="btn dropdown-toggle " type="button" id="dropdownMenuButton" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            <a href="#" class="fa fa-user"></a>
          </button>
          <ul class="dropdown-menu">
            <p class="dropdown-item" style="background-color: black; color: white;" href="#">{{user.Name}}</p>
            <a class="dropdown-item dropdown_items_group" style=" background-color: black; color: white;"
              href="/my-account">Account</a>
            <a class="dropdown-item dropdown_items_group" style="background-color: black; color: white;"
              href="/my-orders">My Orders</a>
            <a class="dropdown-item dropdown_items_group" style="color: white; background-color: red;"
              href="/logout">logout</a>
          </ul>
        </div>
      </div>

      {{else}}
      <div class="icons-header">
        <a href="/login"><button class="login_button">login</button></a>
        <a href="/signup"><button class="login_button ml-2">Register</button></a>
      </div>
      {{/if}}
    </div>
  </div>
  {{!-- user comman header end --}}
  {{{body}}}
  {{!-- user comman footer --}}
  <div id="footerId" class="footer_landing_page mt-5">
    <div class="container-fluid">
      <div class="row">
        <div class=" footer_first_part">
          <img class="footer_first_darklogo" src="/images/footer-logo.JPG" alt="">
          <div class="footer_first_icons">
            <a href=""><i class="	fa fa-apple"></i></a>
            <a href=""><i class="fa fa-facebook-f"></i></a>
            <a href=""><i class="fa fa-amazon"></i></a>
            <a href=""><i class="fa fa-youtube"></i></a>
            <a href=""><i class="fa fa-envelope"></i></a>
          </div>
        </div>
        {{!-- <div class="col-md-6 footer_second_part">
          <div class="footer_secont_icons">
          </div>
        </div> --}}
      </div>
    </div>
  </div>
  {{!-- user script files --}}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script src="/javascripts/ajxScript.js"></script>
  <script src="/javascripts/scriptUser.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  

</body>
{{/if}}


