<div class="container-fluid">
    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image"></div>


        <!-- The content half -->
        <div class="col-md-6 second-part">
            <div class="login d-flex align-items-center py-5">


                <div class="container">
                    <div class="row">
                        <div class="col-lg-10  mx-auto">
                            <a href="/"><button class="back_button fa fa-home mb-2"></button></a>

                            <h3 class="user_form_tittle">OTP Page!</h3>
                            <p class="text-muted mb-4" style="text-align: center;">Enter OTP for success login with OTP
                                to AppleShop.</p>
                            <div id="errorMessage" style="color: red; text-align: center;">{{errorMessage}}</div>
                            <div id="successMessage" class="mb-4" style="color: rgb(4, 213, 70); text-align: center;">
                                {{successMessage}}</div>
                            <div id="timer"></div>
                            <form action="/loginwithOTP2" method="post">
                                <div class="form-group mb-4 inputgroup">
                                    <label for="inputOTP">OTP</label>
                                    <input id="inputOTP" name="userOTP" onkeyup="validateOTP()" type="text"
                                        placeholder="Enter OTP" class="form-control   shadow-sm px-4">
                                    <span id="OTP-error"> </span>
                                    <div class="resendOtp"><a id="resendOtp" href=""></a></div>

                                </div>
                                <div class="form-group mb-2 inputgroup ">
                                    <button type="submit" onclick="return validateSubmit_OTP()"
                                        class="submit_button btn-block text-uppercase mb-2   ">Submit OTP</button>
                                    <span class="submiterr" id="submit-error"></span>
                                </div>
                                <div style="color: white;" class="text-center d-flex justify-content-center mt-4">
                                    <p>Create New Account <a href="/signup" class="font-italic text-muted">
                                            <u style="color: blue;">Sign Up</u></a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
<script>
    window.onload = function () {
        setTimeout(() => {
            startTimer();
        }, 6000);

    };
</script>