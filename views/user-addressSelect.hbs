<div>
  <div class="Product_detail_full mb-5 ">
    <div class="container-fluid">
      <form action="/select-address" method="post" >
        <div class="row marginFor">
          <div class="col-lg-12 selectAddressDiv mt-2 mb-3">
            <h4>Select Address</h4>
          </div>

          <div class="selectFullDiv mb-3">
            <div class="selectOptionDiv">
            <a href="#" class="selectedDot leftMargin mt-3 ">1</a>
            <a href="#" class="dot mt-3 ">2</a>
            <a href="#" class="dot rightMargin mt-3">3</a>
          </div>
          <div class="selectOptionDiv ">
            <p class="selectedOption">Address</p>
            <p class="Option">Order summary</p>
            <p class="Option">Payment</p>
          </div>
          </div>

          {{#each userAddress}}
          <div class="col-lg-12 AddressDiv mt-2 mb-3">
            <div class="innerDiv ml-2  mb-2">

              
              <div class="addressTop">
                <div class="nameHeadDIv">
                  <span class="mt-3 ml-3 "><input type="radio" name="deliveryAddressID" value="{{this._id}}" required></span>
                  <p class="nameHead">{{this.userAddress.userAddressName}}</p>
                </div>
                {{!-- <div class="editButtonDiv">
                  <form action="/edit-address" method="post">
                    <button type="submit" value="{{this._id}}" name="addressId" class="editButton">Edit</button>
                  </form>

                </div> --}}
              </div>
              <p class="addressStyle ml-5">{{this.userAddress.userAddressPhone}}</p>
              <p class="addressStyle ml-5">{{this.userAddress.userAddressHouseName}}</p>
              <p class="addressStyle ml-5">{{this.userAddress.userAddressPlace}} , {{this.userAddress.userAddressCity}}
              </p>
              <p class="addressStyle ml-5">{{this.userAddress.userAddressDistrict}}</p>
              <p class="addressStyle ml-5 ">{{this.userAddress.userAddressState}} -
                {{this.userAddress.userAddressPincode}}</p>
                {{#if this.userAddress.userAddressNearAddress}}
                <p class="addressStyle ml-5">nearest Address : {{this.userAddress.userAddressNearAddress}}</p>
                {{/if}}
                <p class="addressStyle ml-5">Address Type: {{this.userAddress.userAddressType}}</p>
                <p >'</p>
            </div>
          </div><br>
          {{/each}}

        </div>
        <div class="col-lg-12">
          <button class="deliverHereButton ml-1" type="submit">Deliver Here</button>
        </div>

      </form>



    </div>
  </div>