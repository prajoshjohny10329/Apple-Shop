
<div class="container-fluid">
    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image"></div>
        <!-- The content half -->
        <div class="col-md-6 second-part">

            <div class="login d-flex align-items-center py-5">

                <!-- Demo content-->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 mx-auto">
                              <a href="/admin"><button class="back_button fa fa-home mb-2"></button></a>

                            <h3 class="user_form_tittle ">Change Password !</h3>
                            <p class="text-muted mb-4 " style="text-align: center;">Hi Admin ! Enter your new Password and confirm Password.</p>
                            <div id="errorMessage" class="mb-4" style="color: red; text-align: center;">{{errorMessage}}
                            </div>
                            <form action="/admin/adminChangePassword" method="post">
                                <div class="form-group mb-2 inputgroup">
                                        <label for="inputPassword">Password</label>
                                        <input name=" Admin_Password" id="inputPassword" onkeyup="validatePassword()" type="text" placeholder="Password"  class="form-control   shadow-sm px-4 text-primary">
                                        <span id="password-error"> </span>
                                    </div>
                                <div class="form-group mb-2 inputgroup">
                                        <label for="inputConfirmPassword">Confirm password</label>
                                        <input  id="inputConfirmPassword" type="text" onkeyup=" validateConfirm()"  placeholder="Password"  class="form-control   shadow-sm px-4 text-primary">
                                        <span id="confirm-password-error"> </span>
                                </div>
                                
                                <div class="form-group mb-2 inputgroup ">
                                        <button type="submit" onclick="return validateForgot3()"  class="submit_button btn-block text-uppercase mb-2   ">Login</button>
                                        <span class="submitError" id="submit-error"></span>
                                </div>  

                                <div style="color: white;" class="text-center d-flex justify-content-center mt-4">
                                    <p>Create New Account <a href="/signup" class="font-italic text-muted">
                                            <u style="color: blue;">Sign Up</u></a></p>
                                </div>
                            </form>
                           
                        </div>
                    </div>
                </div><!-- End -->

            </div>
        </div><!-- End -->

    </div>
</div>
